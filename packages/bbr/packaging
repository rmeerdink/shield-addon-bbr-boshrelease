#!/bin/bash
set -eu

BBR_VERSION="1.9.38"
BBR_URL="https://github.com/cloudfoundry/bosh-backup-and-restore/releases/download/v${BBR_VERSION}/bbr-${BBR_VERSION}-linux-amd64"

# download from
# https://github.com/cloudfoundry-incubator/bosh-backup-and-restore/releases/download/v1.4.0/bbr-1.4.0-linux-amd64
curl -L "${BBR_URL}" -o bbr
mkdir -p   ${BOSH_INSTALL_TARGET}/bin
cp bbr/bbr ${BOSH_INSTALL_TARGET}/bin
chmod 0755  ${BOSH_INSTALL_TARGET}/bin/*
